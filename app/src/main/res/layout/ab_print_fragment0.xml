<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_selectType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_style_blue"
            android:drawableRight="@drawable/xiala3"
            android:gravity="center"
            android:text="打印类型--生产订单"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_58dp"
        android:layout_margin="@dimen/_10dp"
        android:background="@drawable/back_style_blue"
        android:hint="请在此扫码"
        android:inputType="none"
        android:gravity="center"
        android:maxLength="30"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_big"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_purple1a"
            android:gravity="center"
            android:text="大标签✔"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_small"
            android:layout_width="86dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_height="match_parent"
            android:background="@drawable/back_style_gray3"
            android:gravity="center"
            android:text="小标签"
            android:textColor="#666666"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
